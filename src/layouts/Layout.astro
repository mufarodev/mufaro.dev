---
import "non.geist/mono";
import "non.geist";
import "../components/tw.css";
import { ClientRouter } from "astro:transitions";
import DotBackgroundWrapper from "../components/ui/dot-background-wrapper.astro";
import NavigationBar from "../components/navigation-bar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

const userAgent = Astro.request.headers.get("user-agent") || "";
const unsupportedEngine =
  userAgent.includes("Gecko/") || userAgent.includes("Firefox");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Mufaro's portfolio" />
    <meta
      name="keywords"
      content="mufaro, mufaroxyz, software, developer, portfolio, projects, oss, typescript"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:title"
      content={`Mufaro ${title.toLowerCase() != "mufaro" ? title : ""}`}
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://mufaro.dev" />
    <meta property="og:image" content="https://mufaro.dev/avatar.png" />
    <meta
      property="og:description"
      content="self-taught software developer from Poland. OSS enthusiast"
    />
    <meta name="theme-color" content="#ded2e8" />
    <meta name="twitter:card" content="summary_large_image" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col">
    <NavigationBar transition:animate="fade" />

    <DotBackgroundWrapper>
      <div
        class="absolute inset-0 h-full w-full bg-[#0a0a0a] bg-[radial-gradient(#27272a_1px,transparent_1px)] opacity-100 bg-[size:24px_24px]"
      >
      </div>
      <div
        class="absolute top-0 right-0 h-[35rem] w-[35rem] bg-[#3b00b5] opacity-10 blur-[120px] rounded-full"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 h-[25rem] w-[25rem] bg-[#4f46e5] opacity-10 blur-[120px] rounded-full"
      >
      </div>
      <div
        class="absolute top-1/3 left-1/4 h-[15rem] w-[15rem] bg-[#0ea5e9] opacity-10 blur-[100px] rounded-full"
      >
      </div>
      <slot />
    </DotBackgroundWrapper>

    <div
      class="fixed top-0 left-[50%] -translate-x-[50%] text-base text-yellow-500 font-bold lg:hidden"
    >
      <span class="text-yellow-300">! Mobile support WIP !</span>
    </div>
  </body>
</html>
<style is:global>
  :root {
    --smooth-animation: cubic-bezier(0.16, 1, 0.3, 1);
  }

  html {
    font-family: "Geist Variable", system-ui, sans-serif;
    overflow-y: scroll;
    background: theme(colors.background);
  }

  ::selection {
    background: theme(colors.theme.foreground.contrast);
  }

  ::-moz-selection {
    background: theme(colors.theme.foreground.contrast);
  }

  ::-webkit-scrollbar {
    width: 0.4rem;
  }

  ::-webkit-scrollbar-thumb {
    background: theme(colors.background);
    border-radius: 0.25rem;
  }

  .geist-mono {
    font-family: "Geist Mono Variable", system-ui, sans-serif;
  }

  html::after {
    content: "";
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background-size: 2px 2px;
    background-repeat: repeat;
    pointer-events: none;
  }

  code {
    font-family:
      "Geist Mono",
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  html,
  body {
    min-height: 100svh;
    overflow-x: hidden;
  }

  a.link {
    text-decoration-line: underline;
    text-underline-offset: 0.25rem;
    transition: color 0.1s ease-in-out;

    &:hover {
      color: theme(colors.theme.foreground.secondary);
    }
  }

  .transition-preparing {
    backdrop-filter: none !important;
  }
</style>

<script define:vars={{ unsupportedEngine }}>
  if (unsupportedEngine) {
    console.warn(
      "Unsupported engine detected. Some features may not work as expected. You may want to switch to a modern browser.",
    );
  }
</script>

<script>
  import { initGlowEffect } from "../util";

  document.addEventListener("DOMContentLoaded", () => {
    initGlowEffect();
  });

  document.addEventListener("astro:page-load", () => {
    initGlowEffect();
  });

  document.addEventListener("astro:before-preparation", () => {
    const mainCard = document.getElementById("mainCard");
    if (mainCard) {
      mainCard.classList.add("transition-preparing");
    }
  });

  document.addEventListener("astro:after-swap", () => {
    setTimeout(() => {
      const mainCard = document.getElementById("mainCard");
      if (mainCard) {
        mainCard.classList.remove("transition-preparing");
      }
    }, 50);
  });
</script>
