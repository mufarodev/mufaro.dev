---
import 'non.geist/mono';
import 'non.geist'
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
    <meta charset="UTF-8" /> 
    <meta name="description" content="Mufaro's portfolio" />
    <meta name="keywords" content="mufaro, mufaroxyz, software, developer, portfolio, projects, oss, typescript" />
    <meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={`Mufaro ${title.toLowerCase() != "mufaro" ? title : ""}`} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://mufaro.dev" />
    <meta property="og:image" content="https://mufaro.dev/alya.webp" />
    <meta property="og:description" content="self-taught software developer from Poland. OSS enthusiast" />
    <meta name="theme-color" content="#ded2e8">
    <meta name="twitter:card" content="summary_large_image">
		<title>{title}</title>
    <ClientRouter />
	</head>
	<body class="flex flex-col">
    <slot />

    <div class="fixed bottom-0 right-0 p-4 text-xs text-theme-foreground">
      <span class="text-theme-foreground">Â© 2024 mufaroxyz</span>
    </div>
	</body>
</html>
<style is:global>
  :root {
    --smooth-animation: cubic-bezier(0.16, 1, 0.3, 1);
  }
  
	html {
    font-family: "Geist Variable", system-ui, sans-serif;
    background: theme(colors.background);
	}

  html::after {
    content: "";
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    /* background-image: linear-gradient(rgba(0, 0, 0, 0.4) 1px, transparent 1px); */
    background-size: 2px 2px;
    background-repeat: repeat;
    pointer-events: none;
  }

  @keyframes backgroundScroll {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 0 100%;
    }
  }

  code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
  }

  html,
  body {
    min-height: 100svh;
  }

  a {
    text-decoration-line: underline;
    text-underline-offset: 0.25rem;
    transition: color 0.1s ease-in-out;
  
    &:hover {
      color: theme(colors.theme.foreground.secondary)
    }
  }
</style>
