---
import NavigationBarProgressiveBlur from "../navigation-bar-progressive-blur.astro";

interface Props {
  progressiveBlur?: boolean;
}

const { progressiveBlur } = Astro.props as Props;
---

<main class="relative max-w-5xl px-4 h-full pt-28">
  <slot transition:animate="fade" />
  {progressiveBlur && <NavigationBarProgressiveBlur />}
</main>
