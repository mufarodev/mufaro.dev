---
import ActivityIsland from "../components/ActivityIsland.astro";
import Footer from "../components/Footer.astro";
import Seperator from "../components/Seperator.astro";
import Layout from "../layouts/Layout.astro";
import { ActivityDisplayFallback } from "../components/ActivityDisplayFallback";
import MainContent from "../components/MainContent.astro";
---

<Layout title="Mufaro">
  <div class="absolute inset-0 -z-10 h-full w-full bg-[#0a0a0a] bg-[radial-gradient(#27272a_1px,transparent_1px)] bg-[size:20px_20px]"></div>
  <div class="absolute top-0 right-0 -z-10 h-[30rem] w-[30rem] bg-[#18181b] opacity-30 blur-[100px] rounded-full"></div>
  <div class="absolute bottom-0 left-0 -z-10 h-[20rem] w-[20rem] bg-[#18181b] opacity-30 blur-[100px] rounded-full"></div>
  
  <main class="relative max-w-5xl mx-auto px-4 py-12">
    <div class="backdrop-blur-md bg-black/30 border border-white/10 rounded-xl overflow-hidden shadow-xl">
      <div class="flex flex-col md:flex-row items-start md:items-center gap-8 p-8 border-b border-white/10">
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg blur opacity-50 group-hover:opacity-80 transition duration-1000"></div>
          <img
            src="/alya.webp"
            alt="Profile Picture"
            class="relative rounded-lg w-32 h-32 object-cover"
            width={128}
            height={128}
            transition:name="profile"
          />
        </div>
        
        <div class="flex flex-col gap-4" transition:name="headerinfo" transition:animate="fade">
          <div>
            <h1 class="font-black text-4xl bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-400">Mufaro</h1>
            <p class="font-medium text-gray-400">17yo. software dev | polish</p>
          </div>
          
          <ul class="flex flex-wrap gap-3 pt-2">
            <li>
              <a href="https://discord.com/users/769702535124090904" 
                 class="flex items-center gap-2 px-3 py-1.5 bg-white/5 hover:bg-white/10 rounded-full border border-white/10 transition-all">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M13.545 2.907a13.227 13.227 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.19 12.19 0 0 0-3.658 0 8.258 8.258 0 0 0-.412-.833.051.051 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.041.041 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032c.001.014.01.028.021.037a13.276 13.276 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019c.308-.42.582-.863.818-1.329a.05.05 0 0 0-.01-.059.051.051 0 0 0-.018-.011 8.875 8.875 0 0 1-1.248-.595.05.05 0 0 1-.02-.066.051.051 0 0 1 .015-.019c.084-.063.168-.129.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.052.052 0 0 1 .053.007c.08.066.164.132.248.195a.051.051 0 0 1-.004.085 8.254 8.254 0 0 1-1.249.594.05.05 0 0 0-.03.03.052.052 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.235 13.235 0 0 0 4.001-2.02.049.049 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.034.034 0 0 0-.02-.019Zm-8.198 7.307c-.789 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612Zm5.316 0c-.788 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612Z"/>
                </svg>
                <span class="text-sm">mufaro</span>
              </a>
            </li>
            <li>
              <a href="https://github.com/mufaroxyz" 
                 class="flex items-center gap-2 px-3 py-1.5 bg-white/5 hover:bg-white/10 rounded-full border border-white/10 transition-all">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                </svg>
                <span class="text-sm">mufaroxyz</span>
              </a>
            </li>
            <li>
              <a href="https://x.com/mufaro_dev"
                 class="flex items-center gap-2 px-3 py-1.5 bg-white/5 hover:bg-white/10 rounded-full border border-white/10 transition-all">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z"/>
                </svg>
                <span class="text-sm">mufaro_dev</span>
              </a>
            </li>
          </ul>
        </div>
      </div>

      <div class="p-8 space-y-8">
        <div class="backdrop-blur-md bg-white/5 border border-white/10 rounded-lg p-6">
          <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
              <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
              <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
            </svg>
            About Me
          </h2>
          <p class="text-text-foreground font-normal text-base leading-relaxed text-gray-300">
            hey, I'm mufaro, a self-taught software developer from Poland,
            interested in programming since 2020. I'm a big fan of open-source
            software & free speech. I'm currently trying out various tech such
            as 3D modeling, rendering, motion graphics, and backend development.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="backdrop-blur-md bg-white/5 border border-white/10 rounded-lg p-6 hover:bg-white/10 transition-all">
            <h3 class="text-lg font-bold mb-2 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M14.25 9.14v-.883c0-.31.31-.618.566-.884.258-.264.566-.75.566-1.188 0-.752-.258-1.285-.943-1.285h-1.513V3.227c0-.309-.164-.557-.361-.557h-1.56V1.933c0-.309-.163-.557-.361-.557h-1.56V.27c0-.309-.162-.557-.36-.557h-3.12c-.199 0-.361.248-.361.557v1.107H2.83c-.198 0-.361.248-.361.557v.736H.89c-.198 0-.36.248-.36.557V9.14c0 .31.162.557.36.557h1.578v.556c0 .309.163.557.361.557h1.578v1.107c0 .309.163.557.36.557h9.063c.685 0 .943-.532.943-1.285 0-.437-.308-.923-.566-1.188-.256-.265-.566-.573-.566-.884v-.877c.4.267.83.43 1.271.43.685 0 .943-.533.943-1.286 0-.437-.308-.923-.566-1.188-.256-.265-.566-.573-.566-.884zm-10.358.556H2.323V3.784h1.57v5.912zm3.12 2.22H5.443V5.998h1.57v5.912zm3.121-2.22H8.563V1.933h1.57v7.763z"/>
              </svg>
              Skills
            </h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-white/10 rounded-md text-xs">TypeScript</span>
              <span class="px-2 py-1 bg-white/10 rounded-md text-xs">React</span>
              <span class="px-2 py-1 bg-white/10 rounded-md text-xs">Node.js</span>
              <span class="px-2 py-1 bg-white/10 rounded-md text-xs">Astro</span>
              <span class="px-2 py-1 bg-white/10 rounded-md text-xs">3D Modeling</span>
            </div>
          </div>
          
          <div class="backdrop-blur-md bg-white/5 border border-white/10 rounded-lg p-6 hover:bg-white/10 transition-all">
            <h3 class="text-lg font-bold mb-2 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M2.5 3.5a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-11zm2-2a.5.5 0 0 1 0-1h7a.5.5 0 0 1 0 1h-7zM0 13a1.5 1.5 0 0 0 1.5 1.5h13A1.5 1.5 0 0 0 16 13V6a1.5 1.5 0 0 0-1.5-1.5h-13A1.5 1.5 0 0 0 0 6v7zm1.5.5A.5.5 0 0 1 1 13V6a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5h-13z"/>
              </svg>
              Current Project
            </h3>
            <p class="text-gray-300 text-sm">Working on a portfolio redesign with modern glass morphism and grid layouts.</p>
            <div class="mt-2 h-1 w-full bg-white/10 rounded-full overflow-hidden">
              <div class="h-1 bg-gradient-to-r from-indigo-500 to-purple-600 w-[65%]"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <Footer />
  </main>
</Layout>

<style>
  :root {
    --blur-size: 8rem;
  }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
</style>
