  <MainContent>
    <div
      id="mainCard"
      transition:name="main-card"
      transition:animate="fade" 
      class="relative backdrop-blur-xl bg-black/25 border border-white/10 rounded-2xl overflow-hidden shadow-2xl mb-6 h-fit"
    >
      <div
        class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 via-transparent to-purple-500/5 mix-blend-overlay pointer-events-none opacity-50"
      >
      </div>

      <div
        class="absolute inset-0 opacity-[0.1] pointer-events-none"
        style="background-image: url('data:image/svg+xml;base64,');"
      >
      </div>

      <div
        class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"
      >
      </div>

      <ProfileHeader />
    </div>

    <div class="relative">
      <ExperienceList experiences={experience} client:load />
